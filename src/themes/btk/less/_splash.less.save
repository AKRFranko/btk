b tq,body.splash-on{
	position:fixed;
	max-height:100%;
	overflow:hidden;
}
body.splash-on > *{opacity:0;}
#splash-page{
	opacity:1;
	position:fixed;
	top:0;left:0;
	width:100vw;
	height:100vh;
	z-index:999999;
	background:#000;
}
#splash-page:after{
	content:'';
	display:block;
	position:absolute;
	top:1em;left:50%;
	margin-left:-25%;
	background-image:url("./img/edb.svg");
	background-size:contain;
	background-position:center;
	background-repeat:no-repeat;
	z-index:9999999;
	width:50%;
	height:50%;
}

#splash-page div{
	position:absolute;
	top: 0;left: 0;
	width:100%;
	height:100%;
}

#splash-page .splash-image{
	animation:splashcycler 12s infinite;
	opacity:0;
	background-size:cover;
	background-position:center;
	background-repeat:no-repeat;
}

@keyframes splashcycler{   
  39%{opacity:1;}
  41%{opacity:0;}
} 

#splash-page button{
	position:absolute;
	top:100%;
	left:50%;
	background:rgba(255,255,255,0.8);
	border: 1px solid #fff;
	font-size:2em;
	font-weight:bold;
	box-shadow:0 0 2px rgba(0,0,0,0.3);
	width:10em;
	height:3em;
	margin-top:-4em;
	text-align:center;
}
#splash-page button:hover{
	background:#000;
	color:#fff;
}
#splash-page button:first-of-type{
	margin-left:-11em;
}
#splash-page button:last-of-type{
	margin-right:-11em;
}


#splash-page .splash-image:nth-child(1){animation-delay:0s;}
#splash-page .splash-image:nth-child(2){animation-delay:4s;}
#splash-page .splash-image:nth-child(3){animation-delay:8s;}
